<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/mainlauout"
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/NextStage"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/GameStart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_round"
            android:onClick="onNextStage"
            android:text="START FROM STAGE 1"
            />

        <Button
            android:id="@+id/GameStart"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/NextStage"
            android:layout_below="@+id/LevelUp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_round"
            android:onClick="onGameStart"
            android:text="STORY START"
            />

        <Button
            android:id="@+id/ScoreStart"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_round3"
            android:onClick="onScoreStart"
            android:text="SCORE START"
            android:layout_below="@+id/NextStage"
            android:layout_alignStart="@+id/NextStage"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barrage Fighter \nfor earth"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/LevelUp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/NextStage"
            android:layout_below="@+id/AllClear"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_round2"
            android:onClick="onLevelUp"
            android:text="LEVEL UP"
            />

        <TextView
            android:id="@+id/SubInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="version : 1.1" />

        <Button
            android:id="@+id/AllClear"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/SubInfo"
            android:background="@drawable/btn_state"
            android:onClick="onAllClear"
            android:text="SAVE DATA CLEAR"
            />

        <ImageView
            android:id="@+id/titleimage1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/enemy1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/SubInfo"
            android:layout_toEndOf="@+id/Title" />

        <ImageView
            android:id="@+id/titleimage2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@+id/SubInfo"
            android:layout_alignTop="@+id/Title"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/plain99"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/Title" />

        <!--
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-4924620089567925/5535193757">
        </com.google.android.gms.ads.AdView>
        -->

        <ImageButton
            android:id="@+id/play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/SubInfo"
            android:layout_toEndOf="@+id/Title"
            android:background="#ffffff"
            android:onClick="onPlay"
            app:srcCompat="@drawable/present" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>